<div class="new-entity-wrapper login-wrapper">
  <div class="new-entity-header">
    <h2>Log in</h2>
  </div>

  <%= form_for(resource, as: resource_name, class:'form', url: session_path(resource_name)) do |f| %>
    <div class="form-item">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email' %>
    </div>

    <div class="form-item">
      <%= f.password_field :password, autocomplete: "current-password", placeholder: 'Password' %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
    <div class="wrapper-btn-new-transaction">
            <%= f.submit 'Log in', class: "btn-new-transaction" %>
          </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
